%div{:class => ""}
    %div{:class => "row"}
        %div{:class => "col-sm-12"}
            %div{:class => "well well-sm"}
                %div{:class => "col-lg-12"}
                    %p{:class => "date"}= pup.created_at ? "Created: "+pup.created_at.to_date.to_s : ""
                .row.spacing
                   
                    = render 'shared/rating_comments', width: responsibility, title: "Breeder Responsibility", color: 'progress-bar', id: "breeder"
                    = render 'shared/rating_comments', width: health, title: 'Pup Health', color: 'progress-bar', id: "health"
                .row.spacing
                    = render 'shared/rating_comments', width: train, title: 'Trainability', color: 'progress-bar', id: "train"
                    = render 'shared/rating_comments', width: social, title: 'Human Social Behavior', color: 'progress-bar', id: "social"
                .row.spacing
                   
                    = render 'shared/rating_comments', width: dog, title: 'Dog Social Behavior', color: 'progress-bar', id: "behavior"
                    = render 'shared/rating_comments', width: energy, title: 'Energy Level', color: 'progress-bar', id: "energy"
                .row.spacing   
                    = render 'shared/rating_comments', width: simpatico, title: 'Simpatico Rating', color: 'progress-bar', id: "simpatico"

                - if pup.comment
                    %h4{:class => "rating-comment"} #{pup.comment.content}
                - else
                    %h4{:class => "rating-comment"} 
                %h4
                    - if pup.safe_hashtag_string.size() < 1
                        %p{:class => "no-hashtags"} This pup has no attribute tags
                    - else
                        - pup.safe_hashtag_string.each do |hashtag|
                            - if hashtag != ""
                                %p{:class => "hashtag_results"}=hashtag
                    